﻿@{
    ViewData["Title"] = "Welcome";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROGPart2</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: white;
            font-family: 'Tenor Sans', sans-serif;
            text-align: center;
            padding: 50px;
        }

        h1 {
            color: #ff4da6; /* Light baby pink for headings */
            font-weight: bold;
            text-align: center; /* Center headings */
            text-transform: uppercase;
        }

        h2 {
            color: black;
            font-weight: bold;
            text-align: center; /* Center headings */
            text-transform: uppercase;
        }

        h1 {
            font-size: 2.5em; /* Larger h1 */
        }

        h2 {
            font-size: 1.8em; /* Slightly smaller h2 */
        }

        .btn {
            background-color: #ff3399; /* Darker baby pink buttons */
            color: white;
            padding: 15px 30px;
            margin: 10px;
            border: none;
            border-radius: 4px;
            font-size: 18px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #ff80bf; /* Lighter pink on hover */
            }

        .container {
            margin-top: 50px; /* Adjust to your preference */
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Contract Monthly Claim System</h1>
        <h1>(CMCS)</h1>
        <br />
        <h2>Efficiently manage your claims with ease.</h2>
        <br />
        <h2>Login or create an account to get started.</h2>
        <br />

        <!-- Buttons for Login and Register -->
        <a asp-controller="Account" asp-action="Login" class="btn">Login</a>
        <br />
        <a asp-controller="Account" asp-action="Register" class="btn">Create Account</a>
        <br />
        <a asp-controller="HR" asp-action="HRDashboard" class="btn">HR Dashboard</a>
    </div>
</body>
</html>