@{
    var message = TempData["Message"] as string;
    var role = TempData["UserRole"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success</title>
    <script>
        // Show the success message in a pop-up
        window.onload = function() {
            alert('@message');

            // Redirect based on the user's role
            var userRole = '@role';
            if (userRole === 'Lecturer') {
                window.location.href = '@Url.Action("LecturerLanding", "Account")';
            } else if (userRole === 'Programme Coordinator' || userRole === 'ProgrammeCoordinator/Manager') {
                window.location.href = '@Url.Action("ProgrammeCoordinatorLanding", "Account")';
            } else {
                window.location.href = '@Url.Action("Landing", "Account")';
            }
        };
    </script>
</head>
<body>
</body>
</html>
