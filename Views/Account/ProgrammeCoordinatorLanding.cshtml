@model List<PROGPart2.Models.Claim>

<h1>Manage Claims</h1>

@if (Model != null && Model.Any())
{
        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
            <thead>
                <tr style="background-color: #f2f2f2;">
                    <th style="border: 1px solid #ddd; padding: 8px;">Claim ID</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Lecturer Email</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">University</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Hours Worked</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Hourly Rate</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Total Amount</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Document</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Status</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Action</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var claim in Model)
            {
                var totalAmount = claim.HoursWorked * claim.HourlyRate;

                        <tr>
                            <td style="border: 1px solid #ddd; padding: 8px;">@claim.Id</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">@claim.LecturerEmail</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">@claim.University</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">@claim.HoursWorked</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">
                        @claim.HourlyRate.ToString("C", new System.Globalization.CultureInfo("en-ZA"))
                            </td>
                            <td>@totalAmount.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                                        <a href="@Url.Content("~/uploads/" + claim.DocumentPath)" target="_blank">View Document</a>
                        }
                        else
                        {
                                        <span>No Document</span>
                        }
                            </td>
                            <td style="border: 1px solid #ddd; padding: 8px;">@claim.Status</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">
                        @if (claim.Status == "Pending")
                        {
                                        <form asp-action="UpdateClaimStatus" method="post">
                                            <input type="hidden" name="claimId" value="@claim.Id" />
                                            <button type="submit" name="status" value="Accepted"
                                                    style="background-color: green; color: white; border: none; padding: 10px; width: 100%; margin-bottom: 5px;">
                                                Accept
                                            </button>
                                            <button type="submit" name="status" value="Rejected"
                                                    style="background-color: red; color: white; border: none; padding: 10px; width: 100%;">
                                                Reject
                                            </button>
                                        </form>
                        }
                        else
                        {
                                        <span>@claim.Status</span>
                        }
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>No claims found.</p>
}
