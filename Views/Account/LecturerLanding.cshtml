﻿@{
    ViewData["Title"] = "Lecturer Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROGPart2</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: white;
            font-family: 'Tenor Sans', sans-serif;
            text-align: center;
            padding: 50px;
        }

        h1 {
            color: #ff4da6; /* Light baby pink for headings */
            font-weight: bold;
            text-align: center; /* Center headings */
            text-transform: uppercase;
        }

        h1 {
            color: #ff4da6; /* Light baby pink for headings */
            text-align: center; /* Center headings */
            text-transform: uppercase;
        }

        h3 {
            color: black;
            font-weight: bold;
            text-align: center; /* Center headings */
            text-transform: uppercase;
        }

        h1 {
            font-size: 2.5em; /* Larger h1 */
        }

        h2 {
            font-size: 2.0em; /* Slightly smaller h2 */
        }

        h3 {
            font-size: 1.8em; /* Slightly smaller h2 */
        }

        .btn {
            background-color: #ff3399; /* Darker baby pink buttons */
            color: white;
            padding: 15px 30px;
            margin: 10px;
            border: none;
            border-radius: 4px;
            font-size: 18px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #ff80bf; /* Lighter pink on hover */
            }

    </style>
</head>
<body>

    <h1>Lecturer Dashboard</h1>

    <div>
        <h2>Welcome, @ViewBag.UserName!</h2> <!-- Display the user's name -->
    </div>
    <div>
        <h3>Here you can manage your tasks, monitor performance,</h3>
        <h3>and access key features all in one place.</h3>
        <h3>Stay organised and make informed decisions quickly with our user-friendly interface.</h3>
    </div>
    <div>
        <ul class="action-buttons">
            <li>
                <form asp-action="ManageProfile" method="post">
                    <!-- Form fields here -->
                    <button type="submit">ManageProfile</button>
                </form>
            </li>
            <li>
                <form asp-action="SubmitClaim" method="post">
                    <!-- Form fields here -->
                    <button type="submit">Submit Claim</button>
                </form>

            </li>
            <li>
            <form asp-action="TrackClaims" method="post">
                <!-- Form fields here -->
                <button type="submit">Track Claims</button>
            </form>
            </li>
        </ul>
    </div>
</body>
</html>