@model List<PROGPart2.Models.Claim>

<h1>Track Claims</h1>

@if (Model.Any())
{
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="border: 1px solid #ddd; padding: 8px;">Claim ID</th>
                <th style="border: 1px solid #ddd; padding: 8px;">Date Submitted</th>
                <th style="border: 1px solid #ddd; padding: 8px;">Status</th>
                <th style="border: 1px solid #ddd; padding: 8px;">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td style="border: 1px solid #ddd; padding: 8px;">@claim.Id</td>
                    <td style="border: 1px solid #ddd; padding: 8px;">@claim.StartDate.ToString("yyyy-MM-dd")</td>
                    <td style="border: 1px solid #ddd; padding: 8px;">
                        @if (claim.Status == "Pending")
                        {
                            <span style="color: orange;">Pending</span>
                        }
                        else if (claim.Status == "Accepted")
                        {
                            <span style="color: green;">Accepted</span>
                        }
                        else if (claim.Status == "Rejected")
                        {
                            <span style="color: red;">Rejected</span>
                        }
                    </td>
                    <td style="border: 1px solid #ddd; padding: 8px;">
                        <a asp-action="ViewClaimDetails" asp-route-id="@claim.Id">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>@ViewBag.Message</p> <!-- Displays a message if no claims are found -->
}
